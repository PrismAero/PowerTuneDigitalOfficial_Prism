# .clangd configuration for PowerTune Qt 6 project
# Qt include paths are provided by compile_commands.json (generated by CMake)
# Regenerate: cmake --preset macos-homebrew  (or: cmake --preset debug)
# Then symlink: ln -sf build/debug/compile_commands.json .

CompileFlags:
  CompilationDatabase: .

Diagnostics:
  Suppress:
    - "pp_file_not_found"
    - "drv_unknown_argument"

  ClangTidy:
    Add: []
    Remove:
      - "*"

InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true
  Designators: true

Hover:
  ShowAKA: true

Completion:
  AllScopes: true
